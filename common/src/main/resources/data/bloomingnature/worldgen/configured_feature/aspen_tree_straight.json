      "base_height": 10,
      "height_rand_a": 1,
      "height_rand_b": 9,
      "extra_branch_steps": {
        "type": "minecraft:uniform",
        "value": {
          "min_inclusive": 1,
          "max_inclusive": 3
        }
      },
      "extra_branch_length": {
        "type": "minecraft:uniform",
        "value": {
          "min_inclusive": 0,
          "max_inclusive": 1
        }
      },
      "place_branch_per_log_probability": 0.5,
      "can_grow_through": "#minecraft:mangrove_logs_can_grow_through"
    },
    "dirt_provider": {
      "type": "minecraft:simple_state_provider",
      "state": {
        "Name": "minecraft:dirt",
        "Properties": {
          "axis": "y"
        }
      }
    },
    "trunk_provider": {
      "type": "minecraft:simple_state_provider",
      "state": {
        "Name": "bloomingnature:aspen_log",
